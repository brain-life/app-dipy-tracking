#!/bin/bash
#PBS -l nodes=3:ppn=16:dc2,walltime=1:00:00
#PBS -N app-dipy-tracking
#PBS -V


#for local testing
if [ -z $SERVICE_DIR ]; then export SERVICE_DIR=`pwd`; fi
#ENV="IUHPC"

[ $PBS_O_WORKDIR ] && cd $PBS_O_WORKDIR

if [ $ENV == "IUHPC" ]; then
	if [ $HPC == "KARST" ]; then
		module unload python
		module load anaconda2
		module load freesurfer/6.0.0
	fi
	if [ $HPC == "CARBONATE" ]; then
		module unload python
		module load anaconda/python2.7
		module load freesurfer/6.0.0
	fi
	
	export PYTHONPATH=$PYTHONPATH:/N/u/aryaam/Karst/github_repos/dipy
	export PYTHONPATH=$PYTHONPATH:/N/u/aryaam/Karst/github_repos/nibabel
fi

if [ $ENV == "VM" ]; then
	export PYTHONPATH=$PYTHONPATH:/usr/local/dipy
	export PYTHONPATH=$PYTHONPATH:/usr/local/nibabel
fi

input_nii_gz=`$SERVICE_DIR/jq -r .data_file config.json`
data_seg=`$SERVICE_DIR/jq -r .data_fs_seg config.json`
echo "converting freesurfer segments to volume"
pwd
echo mri_label2vol \
	--seg $data_seg/mri/aparc+aseg.nii.gz \
	--regheader $data_seg/mri/aparc+aseg.nii.gz \
	--temp $input_nii_gz \
	--o $data_seg/mri/volume.nii.gz
mri_label2vol \
	--seg $data_seg/mri/aparc+aseg.nii.gz \
	--regheader $data_seg/mri/aparc+aseg.nii.gz \
	--temp $input_nii_gz \
	--o $data_seg/mri/volume.nii.gz

echo "running main"

time python $SERVICE_DIR/main.py

ret=$?
if [ $ret -ne 0 ]; then
    echo "main.py failed"
    echo $ret > finished
    exit $ret
fi

if [ -s csa_prob.tck ];
then 
	echo 0 > finished
else 
	echo "files missing"
	echo 1 > finished
	exit 1
fi
